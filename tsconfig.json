{
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "esnext",
    "isolatedModules": true,
    "lib": [
      "es2017.object",
      "es2015",
      "es2016",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "baseUrl": "."
  },
  "include": [
    "types",
    "src",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],

}
